@page
@model MoblieAccessories.Categories.DeleteModel

@{
    ViewData["Title"] = "Delete Categories";
}

<h1>Delete Category?</h1>
<div>
    
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Category.CategoryCode)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Category.CategoryCode)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Category.CategoryName)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Category.CategoryName)
        </dd>
    </dl>

    <form method="post">
        <input type="hidden" asp-for="Category.CategoryID" />
        <input type="submit" value="Delete Record" class="btn btn-danger" /> |
        <a asp-page="./Index">Display All Categories</a>
    </form>
</div>
